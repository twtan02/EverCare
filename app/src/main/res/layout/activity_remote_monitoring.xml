<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoteMonitoringActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ToolbarTheme" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_option"
        android:layout_below="@id/surfaceView"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/instructionDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruction_detail"
        android:layout_below="@id/instructionTextView"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/instructionDetailTextView"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/cameraImageButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:padding="16dp"
            android:background="@drawable/button_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/viewerImageButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_viewer"
            android:padding="16dp"
            android:background="@drawable/button_background"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</RelativeLayout>
