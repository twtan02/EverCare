<!-- res/layout/welcome_notification_fragment.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Welcome message and any other content go here -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to EVERCARE"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- Add any other content you want for the welcome notification -->

    <!-- Add more views as needed -->

    <!-- Skip or Continue button for ViewPager -->
    <Button
        android:id="@+id/btnSkipContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:background="@color/black"
        android:layout_marginTop="16dp" />

</LinearLayout>
